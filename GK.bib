year = {2008/10/},
pages = {103505 (8 pp.) - },
issn = {0034-6748},
address = {USA},
abstract = {A correlation electron cyclotron emission (CECE) diagnostic has 
been used to measure local, turbulent fluctuations of the electron temperature 
in the core of DIII-D plasmas. This paper describes the hardware and testing of 
the CECE diagnostic and highlights the importance of measurements of multifield 
fluctuation profiles for the testing and validation of nonlinear gyrokinetic 
